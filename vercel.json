{
  "version": 2,
  "builds": [
    {
      "src": "packages/backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/backend/src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/backend/src/index.ts"
    }
  ],
  "functions": {
    "packages/backend/src/index.ts": {
      "maxDuration": 30
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "installCommand": "npm install --prefix=../.."
}
