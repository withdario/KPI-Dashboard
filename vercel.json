{
  "version": 2,
  "buildCommand": "echo 'Build completed'",
  "outputDirectory": "packages/backend/dist",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "packages/backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/backend/src/index.ts"
    },
    {
      "src": "/health",
      "dest": "packages/backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/backend/src/index.ts"
    }
  ]
}
